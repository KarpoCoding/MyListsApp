<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp">

    <EditText
        android:hint="@string/type_here"
        android:id="@+id/addSeriesDialogEdtTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="a_new_series_to_add"
        android:inputType="text" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addSeriesDialogEdtTxt"
        android:layout_alignStart="@id/addSeriesDialogEdtTxt"
        android:id="@+id/addSeriesDialogSpinner"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/add_a_series_btn"
        android:id="@+id/addSeriesDialogAddASeriesButton"
        android:layout_below="@id/addSeriesDialogEdtTxt"
        android:layout_alignEnd="@id/addSeriesDialogEdtTxt"
        android:layout_marginTop="25dp"
        android:contentDescription="adds a series"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/addSeriesDialogDeleteSeriesButton"
        android:src="@drawable/delete_series_button"
        android:layout_below="@id/addSeriesDialogEdtTxt"
        android:layout_toStartOf="@id/addSeriesDialogAddASeriesButton"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="deletes a series"
        tools:ignore="HardcodedText"/>





</RelativeLayout>